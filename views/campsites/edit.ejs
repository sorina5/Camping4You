<% layout('/layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Campsite</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <form action="/campsites/<%=campsite._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" type="text" id="title" name="campsite[title]" value="<%=campsite.title %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" id="location" name="campsite[location]" value="<%=campsite.location %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="image">Upload Images</label>
                            <input class="form-control" type="file" id="image" name="image" multiple>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Campsite Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">â‚¬</span>
                                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campsite[price]" value="<%=campsite.price %>" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" id="description" name="campsite[description]" required><%= campsite.description%></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <%campsite.images.forEach(function(image, i){%>
                                <img src="<%=image.resize%>" class="img-thumbnail" alt="">
                                <div class="form-check-inline">
                                    <input type="checkbox" id="image_d<%=i%>" name="deleteImages[]" value="<%=image.filename%>">
                                </div>
                                <label for="image_d<%=i%>">Delete</label>
                            <%})%>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success btn-block">Save Campsite</button>
                        </div>
                    </form>
                    <a href="/campsites/<%= campsite._id%>">Back to Campsite</a>
                </div>
            </div>
        </div>
</div>