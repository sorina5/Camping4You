<% layout('/layouts/boilerplate')%>
    <div id="map" style="width: 100%; height: 500px"></div>

    <nav class="navbar navbar-light bg-light mt-3 mb-3">
        <div class="container-fluid">
          <a class="navbar-brand mb-0 h1">All Campsites</a>
          <form class="d-flex">
            <a class="btn btn-success me-md-2" href="/campsites/new" role="button">Add a Campsite</a>
          </form>
        </div>
      </nav>
 
        <% for (let campsite of campsites) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (campsite.images.length) { %>
                        <img class="img-fluid" alt="" src="<%= campsite.images[0].url %>">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campsite.title %></h5>
                            <p class="card-text"><%= campsite.description %></p>
                            <p class="card-text"><%= campsite.description %></p>
                            <p class="card-text"><small class="text-muted"><%= campsite.location %></small></p>
                            <a class="btn btn-primary" href="/campsites/<%= campsite._id %>">View <%= campsite.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% }%>

<script>
    const mapToken = '<%-process.env.Mapbox_token%>';
    const campsites = {features: <%- JSON.stringify(campsites) %>}
</script>

<script src="/scripts/indexMap.js"></script>
 